{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "semicolon": [true, "never"],
    "trailing-comma": [true, {"multiline": "always", "singleline": "never"}],
    "quotemark": [true, "single", "jsx-double"]
  }
}
